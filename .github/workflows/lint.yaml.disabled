name: Lint Code and Manifests

on:
  pull_request:
  push:
    branches: [ "main" ]
  workflow_dispatch:

jobs:
  lint:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Code
        uses: actions/checkout@v4

      - name: Install linters
        run: |
          sudo apt-get update
          sudo apt-get install -y yamllint shellcheck

      - name: Lint YAML
        run: yamllint kubernetes-manifests/


